{
  "name": "Recipe Manager",
  "description": "Recipe manager application.",
  "version": "0.2",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["Defines.js", "background.js"]
    }
  },
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "syncFileSystem",
    { 
      "fileSystem": ["retainEntries"] 
    }
  ]
}